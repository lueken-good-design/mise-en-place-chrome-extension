{
  "manifest_version": 3,
  "name": "Mise en Place Recipe Importer",
  "version": "1.0.0",
  "description": "Import recipes from any website or YouTube video directly to your Mise en Place account",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "https://miseenplace.app/*",
    "https://*.miseenplace.app/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
