{
  "manifest_version": 3,
  "name": "Mise en Place Recipe Importer",
  "version": "1.0.0",
  "description": "Import recipes from any website or YouTube video directly to your Mise en Place account",

  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": [
    "https://mise-en-place.recipes/*",
    "https://*.mise-en-place.recipes/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Mise en Place Recipe Importer"
  },

  "side_panel": {
    "default_path": "sidebar.html"
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "externally_connectable": {
    "matches": [
      "https://mise-en-place.recipes/*",
      "https://*.mise-en-place.recipes/*"
    ]
  }
}
